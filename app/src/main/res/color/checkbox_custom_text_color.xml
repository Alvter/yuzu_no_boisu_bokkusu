<!-- res/color/checkbox_custom_text_color.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态：白字 -->
    <item android:state_checked="true" android:color="#000000" /> <!-- 白色文字 -->
    <!-- 未选中状态：黑字 -->
    <item android:state_checked="false" android:color="#000000" /> <!-- 黑色文字 -->
</selector>